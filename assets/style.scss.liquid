  /**
   * Whole
   */
  #{$class-type}push--#{$namespace}one-whole           { left:100%; }


  /**
   * Halves
   */
  #{$class-type}push--#{$namespace}one-half            { left:50%; }


  /**
   * Thirds
   */
  #{$class-type}push--#{$namespace}one-third           { left:33.333%; }
