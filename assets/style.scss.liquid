  // Quantity selectors
  .ajaxifyCart__product:hover .ajaxifyCart__qty {
    border-color: $ajaxifyGreyLight;
  }

  .ajaxifyCart--is-loading .ajaxifyCart__qty {
    opacity: 0.7;
    border-color: $ajaxifyGreyLight;
  }

  .ajaxifyCart__qty-adjuster {

    &:hover {
      background-color: $ajaxifyGreyLight;
    }

    &:active {
      background-color: darken($ajaxifyGreyLight, 10%);
    }
  }

  .ajaxifyCart__add {
    border-left-color: $ajaxifyGreyLight;
  }

  .ajaxifyCart__minus {
    border-right-color: $ajaxifyGreyLight;
  }

}

#ajaxifyCart-overlay {
  position: fixed;
  width: 100%;
  height: 100%;
  visibility: hidden;
  top: 0;
  left: 0;
  z-index: 99999998;
  opacity: 0;
  cursor: pointer;
  background-color: rgba(211,211,211,0.8);
  @include transition(opacity 450ms cubic-bezier(0.57,.06,.05,.95));
}

.is-visible ~ #ajaxifyCart-overlay {
  opacity: 1;
  visibility: visible;
  @include transition(opacity 650ms cubic-bezier(0.57, 0.06, 0.05, 0.95));
}

#ajaxifyModal .ajaxifyCart__content {
  background-color: #fff;
  min-width: 700px;
  @include transform(scale(0.7));
  opacity: 0;
}

#ajaxifyModal.is-visible .ajaxifyCart__content {
  @include transform(scale(1));
  opacity: 1;
}

#ajaxifyModal {
  .ajaxifyCart__qty input[type="text"] {
    color: #000;
  }
}

/* -----------------
 *  3.6 - Ajaxify Drawer
 * ----------------- */

#ajaxifyDrawer {
  background-color: #000;
  color: #fff;
  height: 0px;
  min-width: 960px;
  overflow: hidden;
  @include perspective (1000px);
  @include transform-style(preserve-3d);
  @include transition(all 600ms cubic-bezier(0.47, 0.5, 0, 0.95));

  &.is-visible {
    @include transition(all 550ms cubic-bezier(0.47, 0, 0, 0.95));
    min-height: 84px; // magic number...
  }

  // Typography styles
  .ajaxifyCart__title {
    display: none;
  }

  h1, h2, h3, h4 {
    color: #fff;
    margin-bottom: 6px;

    a {
      color: #fff;
    }

  }

  h4 {
    font-size: 18px;
    line-height: 22px;
    display: inline;
  }

  h5 {
    color: #adadad;
    margin-bottom: 0;

    a {
      color: #adadad;
    }
  }

  a {
    color: #fff;
  }

  a.ajaxifyCart__remove {
    color: $ajaxifyGrey;
  }

  .ajaxifyCart__col4 {

    input[type="submit"] {
      background-color: #fff;
      color: #000;

      &:hover {
        background-color: #f6f6f6;
      }
    }
  }
}

#ajaxifyDrawer .ajaxifyCart__content {
  margin: 0 auto;
  opacity: 0;
  overflow: hidden;
  background-color: #000;
  width: 960px;

  @include transform-origin(top);
  @include rotateX(-90deg);
}

#ajaxifyDrawer.is-visible .ajaxifyCart__content {
  opacity: 1;
  @include rotateX(0deg);
}

.ajaxifyDrawer-caret {
  position: relative;
  display: block;
  height: 0;
  opacity: 0;
  overflow: hidden;

  .is-visible + & {
    opacity: 1;
    overflow: visible;
  }

  & > span {
    position: absolute;
    top: 0;
    left: 100%;
    display: block;
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 6px solid #000;
    margin-left: -6px;
    opacity: 0;
    @include transform(translate(0,-12px));
    @include transition(all 0.25s ease-in-out 0.2s);
  }

  .is-visible + & > span {
    @include transform(translate(0,0));
    opacity: 1;
  }
}

/* -----------------
 *  3.7 - Sprites, using data URIs to prevent any additional http requests
 * ----------------- */

.sprite {
  display: block;
  text-indent: -9999px;
  background-repeat: no-repeat;
  background-position: 0 0;
}

.ajaxifyCart__add {
  @extend .sprite;
  background-position: center center;
  background-image: url(data:image/png;base64,);
}

.ajaxifyCart__minus {
  @extend .sprite;
  background-position: center center;
  background-image: url(data:image/png;base64,);
}

.ajaxifyCart__close {
  @extend .sprite;
  width: 20px;
  height: 20px;
  float: right;
  cursor: pointer;
  background-position: center center;
  background-image: url(data:image/png;base64,);

  &:hover {
    opacity: 0.7;
  }
}

@media
(-webkit-min-device-pixel-ratio: 2),
(min-resolution: 192dpi) {

  .ajaxifyCart__add {
    background-size: 8px;
    background-image: url(data:image/png;base64,);
  }

  .ajaxifyCart__minus {
    background-size: 8px;
    background-image: url(data:image/png;base64,);
  }
}
