{% layout settings.customer_layout %}
        <section class="page">
            <div class="page__inner">
				<div class="page__text">

					<h1>Activate Account</h1>
					<p>Create your password to activate your account</p>

					{% form 'activate_customer_password' %}
						{{ form.errors | default_errors }}

						<div class="form__row">
							<label for="password">Password</label>
							<input type="password" value="" name="customer[password]" id="customer_password" />
						</div>
						<div class="form__row">
							<label for="password_confirmation">Password Confirmation</label>
							<input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" />
						</div>
						<div class="form__row grid">
							<div class="grid__item one-half">
								<input class="btn__generic" type="submit" value="Activate Account" />
							</div>
							<div class="grid__item one-half">
								<input type="submit" class="btn__generic" name="decline" id="customer_decline" value="Decline Invitation" />
							</div>
						</div>
					{% endform %}

				</div>
			</div>
		</section>