        <section class="page">
            <div class="page__inner">

                <div class="page__text{% if settings.use_footer %} hasfooter{% endif %} rte">

					{% paginate blog.articles by 10 %}

					{% if current_tags %}
						<h1>{{ blog.title }}</h1>
						<div class="breadcrumb breadcrumb--blog">
							<p><b>Viewing:</b> {{ blog.title | link_to: blog.url }} <span class="separator">></span> {{ current_tags.first }}</p>
						</div>
					{% else %}
						<h1>{{ blog.title }}</h1>
					{% endif %}

					{% for article in blog.articles %}
						<div class="grid blog__article">
							<div class="grid__item desk--one-quarter blog__meta">
								<h2 class="desk--hide blog__title"><a href="{{ article.url }}">{{ article.title }}</a></h2>
								<p><b><span class="blog__date">{{ article.published_at | date: '%d %B %Y' }}</span></b>
								{% if blog.comments_enabled? %}
									<br class="palm--hide lap--hide"><a href="{{ article.url }}#comments">{{ article.comments_count }} {{ article.comments_count | pluralize: 'comment','comments' }}</a></p>
								{% endif %}
							    {% if article.tags.size > 0 %}
								    <div class="blog__tags">
										<p><b>Tags:</b>
										{% for tag in article.tags %} 
											<a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>{% unless forloop.last %}, {% endunless %}
										{% endfor %}</p>
								    </div>
							    {% endif %}
							</div>
							<div class="grid__item desk--three-quarters blog__content rte">
								<h2 class="palm--hide lap--hide desk--show blog__title"><a href="{{ article.url }}">{{ article.title }}</a></h2>
								{{ article.excerpt_or_content }}
								{% if article.excerpt != blank %}<p><a href="{{ article.url }}">Read more â†’</a></p>{% endif %}
								{% unless forloop.last %}<hr>{% endunless %}
							</div>
						</div>
					{% endfor %}

					{% assign articlecnt = blog.articles_count | times: 1 %}

					{% if articlecnt > 10 %}
					<div class="pagination">
						<p>{{ paginate | default_pagination }}</p>
					</div>
					{% endif %}
					<div class="rss talign--right">
						<span class="icon__rss"></span> <a href="{{ shop.url }}{{ blog.url }}.atom">Subscribe to our blog</a>
					</div>

					{% endpaginate %}

                </div>

            </div>
        </section>